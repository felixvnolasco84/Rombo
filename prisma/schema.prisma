generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


enum ACTION {
  CREATE
  UPDATE
  DELETE
}

enum TABLE_TYPE {
  BOARD
  LIST
  CARD
}

model AudLog {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  orgId      String?
  action     ACTION
  tableId    String
  tableType  TABLE_TYPE
  tableTitle String
  userId     String     @db.ObjectId
  userImage  String
  userName   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

